# Flov - Voice to Text Assistant
# Copy this file to flov.toml and fill in your API key

[whisper]
# Path to whisper model (ggml format)
model_path = "models/ggml-large-v3-turbo.bin"
# Language for transcription (empty = auto-detect)
language = "ru"

[audio]
# Sample rate for recording
sample_rate = 16000

[api]
# GLM API for text improvement (optional)
endpoint = "https://api.z.ai/api/coding/paas/v4/chat/completions"
key = "YOUR_API_KEY_HERE"
model = "glm-4.5-air"
